{% extends "base.twig" %}
{% block content %}

    
    <div class= "text-center">
        <h1>Create Task By Contact{{ task.id }}</h1>
    </div>
    <div class= "text-center">
        <form class="text-center" method="POST" action="http://localhost/formation_php/tp_fin_php/public/task/update/{{ task.id }}" >
            <div class="m-2">
                <label for="title" class="form-label">Nom de la tache *</label>
                <input type="text" class="form-control" placeholder="Nom de la tache" name="title" value="{{task.title}}" required>
            </div>
            <div class="m-2" >
                <label for="description" class="form-label">Description de la tache *</label>
                <textarea maxlength="255" class="form-control" style="height: 100px" placeholder="Description de la tache" name="description" required>{{task.description}}</textarea>
            </div>
            <div class="m-2"> <!-- faire un menu déroulant -->
                <label for="chalet" >Select your chalet :</label>
                <select name="chalet" id="chalet" required>
                    <option>--Please choose an option--</option>
                    <option {% if task.chalet == "chalet 1 - hauntedHome" %} selected {% endif %}>chalet 1 - hauntedHome</option>
                    <option {% if task.chalet == "chalet 2 - foresthome" %} selected {% endif %}>chalet 2 - forestHome</option>
                    <option {% if task.chalet == "chalet 3 - trianglehome" %} selected {% endif %}>chalet 3 - triangleHome</option>
                    <option {% if task.chalet == "chalet 4 - snowhome" %} selected {% endif %}>chalet 4 - snowHome</option>
                    <option {% if task.chalet == "chalet 5 - lakehome" %} selected {% endif %}>chalet 5 - lakeHome</option>
                    <option {% if task.chalet == "chalet 6 - plainhome" %} selected {% endif %}>chalet 6 - plainHome</option>
                </select>
            </div>
            <div class="m-6"> <!-- faire un menu déroulant -->
                <label for="duration" >Choose duration :</label>
                <select name="duration" id="duration" required>
                    <option>--Please choose an option--</option>
                    <option {% if task.duration == "Très urgent" %} selected {% endif %}>Très urgent</option>
                    <option {% if task.duration == "Urgent" %} selected {% endif %}>Urgent </option>
                    <option {% if task.duration == "A prévoir" %} selected {% endif %}>A prévoir</option>
                </select>
            </div>
            <div class="m-2"> <!-- faire un menu déroulant -->
                <label for="who" >Choose your service to contact :</label>
                <select name="who" id="who" required>
                    <option>--Please choose an option--</option>
                    <option {% if task.who == "Adam - electricy" %} selected {% endif %}>Adam - electricity</option>
                    <option {% if task.who == "Cédric - plumber" %} selected {% endif %}>Cédric - plumber</option>
                    <option {% if task.who == "Julien - gas" %} selected {% endif %}>Julien - gas</option>
                    <option {% if task.who == "Louis - crapenter" %} selected {% endif %}>Louis - carpenter</option>
                    <option {% if task.who == "Marc - piscinist" %} selected {% endif %}>Marc - piscinist</option>
                    <option {% if task.who == "Thomas - driver" %} selected {% endif %}>Thomas - driver</option>
                    <option {% if task.who == "Victoria - special service" %} selected {% endif %}>Victoria - special service</option>
                </select>
            </div>
            <div class="m-2"><!-- faire un menu déroulant -->
                <label for="status">Choose a status :</label>
                <select name="status" id="status" required>
                    <option>--Please choose an option--</option>
                    <option {% if task.status == "En cours" %} selected {% endif %}>En attente</option>
                    <option {% if task.status == "En attente" %} selected {% endif %}>En cours</option>
                    <option {% if task.status == "Termine" %} selected {% endif %}>Termine</option>
                </select>
            </div>
            <div>
                <a class="btn btn-primary" href="http://localhost/formation_php/tp_fin_php/public/task">Back</a>
                <button type="submit" class="btn btn-success m-1">Mettre à jour la tâche</button>
            </div>
        </form>
    </div>


{% endblock %}