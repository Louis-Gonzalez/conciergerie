{# On étend le fichier base ici, car dans base on a déclare des blocks #}
{% extends 'base.twig' %} 

{% block content %}
    <div class= "text-center">
        <h1>New Task</h1>
    </div>
    <div class= "text-center">
        <form class="text-center" method="POST" action="http://localhost/formation_php/tp_fin_php/public/task/new" >
            <div class="m-2">
                <label for="title" class="form-label">Nom de la tache *</label>
                <input type="text" class="form-control" placeholder="Nom de la tache" name="title" required>
            </div>
            <div class="m-2" >
                <label for="description" class="form-label">Description de la tache *</label>
                <textarea maxlength="255" class="form-control" style="height: 100px" placeholder="Description de la tache" name="description" required></textarea>
            </div>
            <div class="m-6"> <!-- faire un menu déroulant -->
                <label for="duration">Choose duration</label>
                <select name="duration" id="duration" required>
                    <option>--Please choose an option--</option>
                    <option>Court terme</option>
                    <option>Moyen terme</option>
                    <option>Long terme</option>
                </select>
            </div>
            <div class="m-2"><!-- faire un menu déroulant -->
                <label for="who">Choose who*</label>
                <select name="who" id="who" required>
                    <option>--Please choose an option--</option>
                    <option>Adam - electricity</option>
                    <option>Cédric - plumber</option>
                    <option>Julien - gas</option>
                    <option>Louis - carpenter</option>
                    <option>Marc - piscinist</option>
                    <option>Thomas - driver</option>
                    <option>Victoria - special service</option>
                </select>
            </div>
            <div class="m-2"><!-- faire un menu déroulant -->
                <label for="who">Choose your challet*</label>
                <select name="who" id="who" required>
                    <option>--Please choose an option--</option>
                    <option>challet 1 - hauntedHome </option>
                    <option>challet 2 - forestHome</option>
                    <option>challet 3 - triangleHome</option>
                    <option>challet 4 - snowHome</option>
                    <option>challet 5 - lakeHome</option>
                    <option>challet 6 - plainHome</option>
                </select>
            </div>
            <div>
                <a class="btn btn-primary" href="http://localhost/formation_php/tp_fin_php/public/task">Back</a>
                <button type="submit" class="btn btn-success m-1">Ajouter la tâche</button>
            </div>
        </form>
    </div>

{% endblock %}
